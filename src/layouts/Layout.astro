---
import '@/styles/global.css'
import '@/styles/typography.css'

import Footer from '@/components/Footer.astro'
import Head from '@/components/Head.astro'
import Navbar from '@/components/react/navbar'
import { SITE } from '@/consts'
import { cn } from '@/lib/utils'
import ClientRouter from 'astro/components/ClientRouter.astro';

const {
  isWide = false
} = Astro.props
---

<!doctype html>
<html lang={SITE.locale}>
  <Head>
    <slot name="head" />
    <script is:inline src="https://analytics.ahrefs.com/analytics.js" data-key="+FHMgRP7/Duxaq5D0gZtJw" async></script>

    <!-- Preload critical resources -->
    <link rel="preload" href="/fonts/Wavehaus/Wavehaus-95SemiBold.woff" as="font" type="font/woff" crossorigin />
    <link rel="preload" href="/fonts/HostGrotesk/HostGrotesk-Regular.ttf" as="font" type="font/ttf" crossorigin />

    <!-- DNS prefetch for external resources -->
    <link rel="dns-prefetch" href="//analytics.ahrefs.com" />

    <script is:inline transition:persist>
  (function() {
    function applyTheme() {
      try {
        const stored = localStorage.getItem('theme');
        const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
        const isDark = stored === 'dark' || (!stored && prefersDark);

        document.documentElement.classList.toggle('dark', isDark);
      } catch (e) {
        console.warn('Theme apply failed', e);
      }
    }

    // Apply immediately on load
    applyTheme();

    // Only apply BEFORE swap to prevent double application
    document.addEventListener('astro:before-swap', (e) => {
      // Apply theme to the new document before it swaps
      const stored = localStorage.getItem('theme');
      const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
      const isDark = stored === 'dark' || (!stored && prefersDark);

      // Apply to the incoming document
      e.newDocument.documentElement.classList.toggle('dark', isDark);
    });

    // System theme changes
    const media = window.matchMedia('(prefers-color-scheme: dark)');
    media.addEventListener('change', (e) => {
      if (!localStorage.getItem('theme')) {
        document.documentElement.classList.toggle('dark', e.matches);
      }
    });
  })();
</script>
    <link rel="alternate" type="application/rss+xml" title="RSS Feed" href="/rss.xml" />
    <ClientRouter/>
  </Head>
  <body>
    <div class="flex h-fit min-h-screen w-full flex-col gap-y-4 sm:gap-y-6 font-sans">
      <Navbar client:load />
      <main class="flex grow flex-col bg-background mt-16 lg:mt-6" aria-label="Main content" role="main">
        <div
          class={cn(
            'mx-auto flex grow flex-col gap-y-4 sm:gap-y-6 px-3 py-10 sm:py-16 md:py-20 lg:py-24 sm:px-6 lg:px-8',
            !isWide && 'max-w-5xl'
          )}
        >
          <slot />
        </div>
      </main>
      <Footer />
    </div>
  </body>
</html>
